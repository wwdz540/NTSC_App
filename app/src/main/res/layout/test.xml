<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:padding="0dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/timer_widget_bg2"
    android:orientation="horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/nts_logo"
            android:id="@+id/nts_logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家授时中心"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1dip"
        android:layout_height="100dip"
        android:background="#678ab2"></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    style="@style/timer_widget_text"
                    android:id="@+id/tv_hour"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:src="@drawable/timerdot"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    style="@style/timer_widget_text"
                    android:id="@+id/tv_min"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:src="@drawable/timerdot"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    style="@style/timer_widget_text"
                    android:id="@+id/tv_sec"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:text="2016-2-2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>