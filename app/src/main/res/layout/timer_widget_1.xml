<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:orientation="horizontal"
    android:background="@drawable/time_appwidget_bg2">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="18dip"
        android:paddingRight="8dip"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/nts_logo"
            android:id="@+id/nts_logo"
            android:layout_width="40dip"
            android:layout_height="40dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:text="国家授时中心"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#346ea1"></LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="8dip"
        android:paddingRight="22dip"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <!---  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:paddingRight="13dip"
            android:gravity="center_vertical|right">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    style="@style/timer_widget_text"
                    android:id="@+id/tv_hour"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:src="@drawable/timerdot"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    style="@style/timer_widget_text"
                    android:id="@+id/tv_min"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:src="@drawable/timerdot"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView

                    style="@style/timer_widget_text"
                    android:id="@+id/tv_sec"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:text="星期一"
                android:paddingRight="14dip"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wg_date"
                android:text="0000.00.00"
                android:textSize="14sp"
                android:gravity="right"
                android:paddingRight="14dip"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--  -->
    </LinearLayout>
</LinearLayout>
